{
    "fields" : [
        {
            "comment" : "String fields",
            "match" : [
                { "type" : [ "char", "varchar", "tinyblob", "tinytext", "blob", "text", "mediumblob", "mediumtext", "longblob",  "longtext"], "length" : { ">" : 1 }}
            ],
            "decorators" : [
                {"name" : "String"}
            ],
            "validators" : [
                {"name" : "\\Symfony\\Component\\Validator\\Constraints\\Length", "params" : {"min" : 0, "max" : "COLUMN_CHAR_LENGTH", "charset" : "UTF-8"}}
            ],
            "filters"   : [
                {"name" : "\\Model\\Filter\\StringTrim"}
            ]
        },

        {
            "comment" : "Name fields",
            "match" : [
                { "regexp": "#\\.(name|title|h1|meta_title)(_alias|_translate)?$#", "type" : [ "char", "varchar" ]}
            ],
            "filters"   : [
                {"name" : "\\Model\\Filter\\Name"}
            ]
        },

        {
            "comment" : "Slug fields",
            "match" : [
                { "regexp": "#\\.(slug|.*_slug)?$#", "type" : [ "char", "varchar" ]}
            ],
            "filters"   : [
                {"name" : "\\Model\\Filter\\Slug"}
            ]
        },

        {
            "comment" : "Hash fields",
            "match" : [
                { "regexp": "#\\.(hash|md5|.*_hash|.*_md5)?$#", "type" : [ "char", "varchar" ]}
            ],
            "filters"   : [
                {"name" : "\\Model\\Filter\\Hash"}
            ],
            "validators" : [
                {"name" : "\\Symfony\\Component\\Validator\\Constraints\\Length", "params" : {"min" : "COLUMN_CHAR_LENGTH", "max" : "COLUMN_CHAR_LENGTH",  "charset" : "UTF-8"}},
                {"name" : "\\Symfony\\Component\\Validator\\Constraints\\Uuid"}
            ]
        },

        {
            "comment" : "Stem fields",
            "match" : [
                { "regexp": "#\\.(stem|.*_stem)?$#", "type" : [ "char", "varchar" ]}
            ],
            "filters"   : [
                {"name" : "\\Model\\Filter\\Stem"}
            ]
        },

        {
            "comment" : "Unique stem fields",
            "match" : [
                { "regexp": "#\\.(ustem|.*_ustem)?$#", "type" : [ "char", "varchar" ]}
            ],
            "filters"   : [
                {"name" : "\\Model\\Filter\\UniqStem"}
            ]
        },

        {
            "comment" : "Email fields",
            "match" : [
                { "regexp": "#\\.(email|.*_email)?$#", "type" : [ "char", "varchar" ]}
            ],
            "filters"   : [
                {"name" : "\\Model\\Filter\\Email"}
            ],
            "validators" : [
                {"name" : "\\Symfony\\Component\\Validator\\Constraints\\Email"}
            ]
        },

        {
            "comment" : "Url fields",
            "match" : [
                { "regexp": "#\\.(url|.*_url)?$#", "type" : [ "char", "varchar" ]}
            ],
            "filters"   : [
                {"name" : "\\Model\\Filter\\Url"}
            ],
            "decorators" : [
                {
                    "name" : "Url"
                }
            ]

        },

        {
            "comment" : "Text fields",
            "match" : [
                { "regexp": "#\\.(text|.*_text|description|.*_description|comment|.*_comment)?$#", "type" : [ "char", "varchar", "tinyblob", "tinytext", "blob", "text", "mediumblob", "mediumtext", "longblob",  "longtext"] }
            ],
            "filters"   : [
                {"name" : "\\Model\\Filter\\Url"}
            ]
        },

        {
            "comment" : "Price fields",
            "match" : [
                { "regexp": "#\\.(price|.*_price)?$#", "type" : [ "decimal" ]}
            ],
            "filters"   : [
                {"name" : "\\Model\\Filter\\Price"}
            ]
        },

        {
            "comment" : "Small integer fields",
            "match" : [
                { "type" : [ "tinyint", "smallint", "mediumint"] }
            ],
            "decorators" : [
                { "name" : "Int" }
            ],
            "validators" : [
                {"name" : "\\Symfony\\Component\\Validator\\Constraints\\Regex", "params" : {"pattern" : "/^\\d*$/"}},
                {"name" : "\\Symfony\\Component\\Validator\\Constraints\\Range", "params" : {"min" : "MIN_VALUE", "max" : "MAX_VALUE"}}
            ],
            "filters"   : [
                {"name" : "\\Model\\Filter\\Int"}
            ]
        },
        {
            "comment" : "Big integer fields",
            "match" : [
                { "type" : [ "int", "bigint"] }
            ],
            "decorators" : [
                { "name" : "Int" }
            ],
            "validators" : [
                {"name" : "\\Symfony\\Component\\Validator\\Constraints\\Regex", "params" : {"pattern" : "/^\\d*$/"}}
            ],
            "filters"   : [
                {"name" : "\\Model\\Filter\\Int"}
            ]
        },

        {
            "comment" : "Absolute integer fields",
            "match" : [
                { "regexp": "#\\.(level|pos|count|.*_count)?$#", "type" : [ "tinyint", "smallint", "mediumint", "int", "bigint"] }
            ],
            "filters"   : [
                { "name" : "\\Model\\Filter\\Abs"}
            ]
        },

        {
            "comment" : "Float fields",
            "match" : [
                { "type" : [ "float", "decimal", "double"] }
            ],
            "decorators" : [
                { "name" : "Float" }
            ],
            "validators" : [
                {"name" : "\\Symfony\\Component\\Validator\\Constraints\\Regex", "params" : {"pattern" : "/^[\\d\\,\\.]*$/"}}
            ],

            "filters"   : [
                {"name" : "\\Model\\Filter\\Float"}
            ]
        },
        {
            "comment" : "DateTime",
            "match" : [
                {"type"  : [ "timestamp"]}
            ],
            "filters" : [
                {"name" : "\\Model\\Filter\\Date"}
            ]
        },

        {
            "comment" : "Enum FLAG fields check",
            "match" : [
                { "regexp" : "#\\.is_#", "type"  : [ "enum"] }
            ],
            "filters" : [
                {"name" : "\\Model\\Filter\\IsFlag"}
            ]
        },

        {
            "comment" : "Enum fields check",
            "match" : [
                { "type"  : [ "enum"] }
            ],
            "validators" : [
                {"name" : "\\Symfony\\Component\\Validator\\Constraints\\Choice", "params" : {"choices" : "COLUMN_ENUM_VALUES"}}
            ],
            "filters" : [
                { "name" : "\\Model\\Filter\\EnumField" }
            ]
        },

        {
            "comment" : "DateTime validation",
            "match" : [
                {"type"  : ["date", "timestamp"], "length" : { ">" : 1 }}
            ],
            "decorators" : [
                {"name" : "DateTime"}
            ],
            "validators" : [
                {"name" : "\\Symfony\\Component\\Validator\\Constraints\\DateTime"}
            ]
        },

        {
            "comment" : "ID fields",
            "match" : [{ "regexp": "#\\.id$#",
                    "type"  : [ "tinyint", "smallint", "mediumint", "int", "bigint"],
                    "length" : { ">" : 1 }
                }
            ],
            "decorators" : [
                {
                    "name" : "Int"
                }
            ]
        },
        {
            "comment" : "Float fields",
            "match" : [
                {
                    "type"  : [ "float", "decimal", "double"],
                    "length" : { ">" : 1 }
                }
            ],
            "decorators" : [
                {
                    "name" : "Float"
                }
            ]
        }
    ],

    "plugins" : {
        "cond": {
            "list" : [
                {"name" : "JoinConst"},
                {"name" : "WithConst"},
                {"name" : "Tree" },
                {"name" : "SetupEntity" }
            ]
        },
        "entity": {
            "list" : [
                {"name" : "Dockblock"},
                {"name" : "DecoratorMethod"},
                {"name" : "DataTypes" },
                {"name" : "Getter" },
                {"name" : "GetterEnum" },
                {"name" : "RelatedGetter" }
            ]
        },
        "collection": {
            "list" : [
                {"name" : "DefaultEntityType"},
                {"name" : "Dockblock"}
            ]
        },

        "model": {
            "list" : [
                {"name" : "Dockblock"},
                {"name" : "InitDefaults"},
                {"name" : "Relationdefine"},
                {"name" : "IndexList"},
                {"name" : "Construct"},
                {"name" : "InitFilterRules"},
                {"name" : "InitValidatorRules"},
                {"name" : "Getter"},
                {"name" : "GetInstance"},
                {"name" : "Link"},
                {"name" : "Tree"},
                {"name" : "ConstantList"}
            ]
        },

        "front_model": {
            "list" : []
        }

    }
}